<h1>New Order</h1>

<h3>Items</h3>
<%= form_for @form, method: :post do |f| %>
  <table class="table" id='order_items'>
    <tbody>
      <%= f.fields_for :order_items do |order_item| %>
        <tr>
        <%= render 'order_item_fields', :f => order_item %>
        </tr>
      <% end %>
      <tr>
      </tr>
   </tbody>
  </table>
    <%= f.submit 'Save', { class: "btn btn-primary" }  %>
<% end %>

<%= link_to 'Cancel order', menu_items_path, { class: "btn btn-default"} %>
